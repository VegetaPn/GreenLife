    <servlet-class>com.greenlife.client.controller.CollectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CollectServlet</servlet-name>
    <url-pattern>/GreenLife/collect</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReAddressServlet</servlet-name>
    <servlet-class>com.greenlife.client.controller.ReAddressServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReAddressServlet</servlet-name>
    <url-pattern>/GreenLife/reAddress</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MyAddressServlet</servlet-name>
    <servlet-class>com.greenlife.client.controller.MyAddressServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyAddressServlet</servlet-name>
    <url-pattern>/GreenLife/myAddress</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CommentServlet</servlet-name>
    <servlet-class>com.greenlife.client.controller.CommentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommentServlet</servlet-name>
    <url-pattern>/GreenLife/comment</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PurchaseServlet</servlet-name>
    <servlet-class>com.greenlife.client.controller.PurchaseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PurchaseServlet</servlet-name>
    <url-pattern>/GreenLife/purchase</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>ChangeAddressServlet</servlet-name>
    <servlet-class>com.greenlife.client.controller.ChangeAddressServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChangeAddressServlet</servlet-name>
    <url-pattern>/GreenLife/changeAddress</url-pattern>
  </servlet-mapping>

	<welcome-file-list>
		<welcome-file>Client/page/login.jsp</welcome-file>
	</welcome-file-list>

	
	
	
	<servlet>
		<servlet-name>ServerLoginServlet</servlet-name>
		<servlet-class>com.greenlife.server.controller.ServerLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServerLoginServlet</servlet-name>
		<url-pattern>/ServerLoginServlet</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>com.greenlife.util.MyTimerListener</listener-class>
	</listener>

</web-app>